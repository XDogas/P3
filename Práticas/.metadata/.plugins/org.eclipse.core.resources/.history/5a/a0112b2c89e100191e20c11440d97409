package aula1;

public class Circulo {
	
	private double raio;
	private Ponto centro;
	
	public Circulo(double x, double y, double r) {
		centro = new Ponto(x,y);
		raio = r;
	}
	
	public Circulo(Ponto centro, double r) {
		raio = r;
		this.centro = centro;
	}
	
	public double getRaio() { return this.raio; }
	public Ponto getCentro() { return this.centro; }
	
	public double getArea() {
		return Math.PI * Math.pow(raio, 2);
	}
	
	public double getPerimetro() {
		return 2 * Math.PI * raio;
	}
	
	public String toString() {
		return "Circulo com centro em " + getCentro() + ", de raio " + getRaio() + ", com a area " + getArea() + " e com o perimetro " + getPerimetro();


	}

}
