	//		else size = p2.getY() - p1.getX();
			
	//	} else if(p1.getY() == p2.getY()) {
			
	//		if(p1.getX() > p2.getX()) size = p1.getX() - p2.getX();
	//		else size = p2.getX() - p1.getX();
	//	}
		
	//	assert size > 0;
	//}
	

}
